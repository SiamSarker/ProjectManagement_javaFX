                    <font>
                        <Font name="Chalkboard" size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="msgTextField" layoutX="493.0" layoutY="663.0" prefHeight="55.0" prefWidth="210.0" style="-fx-border-color: Blue;" />

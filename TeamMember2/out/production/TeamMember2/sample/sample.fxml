                <Label layoutX="210.0" layoutY="14.0" prefHeight="35.0" prefWidth="581.0" text="Project Management Software (Team Member)" textFill="#eb0e0eb0">
                    <font>
                        <Font size="29.0" />
                    </font>
                </Label>
                <Label layoutX="20.0" layoutY="58.0" prefHeight="27.0" prefWidth="136.0" text="Notice Board :">
                    <font>
                        <Font name="Chalkboard" size="20.0" />
                    </font>
                </Label>
                <TextArea fx:id="noticeTextArea" editable="false" layoutX="20.0" layoutY="85.0" prefHeight="113.0" prefWidth="771.0" promptText="Notice Board Area" style="-fx-border-color: Blue;">

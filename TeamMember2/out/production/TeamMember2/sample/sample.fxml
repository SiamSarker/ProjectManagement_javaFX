                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#begin2" text="Beggining" />
                        <MenuItem mnemonicParsing="false" onAction="#run2" text="Running" />
                        <MenuItem mnemonicParsing="false" onAction="#end2" text="Ended" />
                    </items>
                </MenuButton>

            </children>
        </AnchorPane>
    </children>
</GridPane>

                    <font>
                        <Font name="Chalkboard" size="20.0" />
                    </font>
                </Button>
                <Label layoutX="20.0" layoutY="216.0" prefHeight="31.0" prefWidth="121.0" text="Task Board :">
                    <font>
                        <Font name="Chalkboard" size="20.0" />
                    </font>
                </Label>
                <Label layoutX="207.0" layoutY="452.0" prefHeight="26.0" prefWidth="86.0" text="Chat box" textAlignment="CENTER">
                    <font>
                        <Font name="Chalkboard" size="20.0" />
                    </font>
                </Label>
                <TextArea fx:id="assign2TextArea" editable="false" layoutX="16.0" layoutY="250.0" prefHeight="138.0" prefWidth="465.0" promptText="Task Area" style="-fx-border-color: Blue;" />
